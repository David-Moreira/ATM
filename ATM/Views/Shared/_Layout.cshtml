<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | ATM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:700" rel="stylesheet">

</head>
<body>


    <div class="container body-content atm-content">
       <a href="@Url.Action("Index","Home")"> <div class="divTitle"><h1>ATM Service</h1></div> </a> 
        @if (Request.IsAuthenticated)
        {

            @Html.Partial("_LoggedInPartial")
        }

        <div>
            @RenderBody()


        </div>     

        </div>

    @Html.Partial("_FooterPartial")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
